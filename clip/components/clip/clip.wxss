/* components/clip/clip.wxss */
.clip {
  height: 100vh;
  width: 100vw;
  position: relative;
  background: #000;
  overflow: hidden;
}

movable-view image {
  width: 100%;
  height: 100%;
}

.top {
  position: absolute;
  height: 300rpx;
  background: rgba(0, 0, 0, 0.7);
  z-index: 100;
  display: flex;
}

.top-1,
.top-2,
.top-3 {
  height: 100%;
}

.top-2 {
  box-sizing: border-box;
  border-bottom: 1px solid rgb(36, 128, 0);
}

.line-2,
.line-3 {
  background: rgba(0, 0, 0, 0.7);
  z-index: 100;
  box-sizing: border-box;
}

.line-2 {
  border-right: 1px solid rgb(36, 128, 0);
}

.line-3 {
  border-left: 1px solid rgb(36, 128, 0);
}

.line-3 {
  right: 0;
}

.main {
  position: absolute;
  top: 300rpx;
  width: 100%;
  display: flex;
}

.bottom {
  position: absolute;
  bottom: 0;
  z-index: 100;
  width: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
}

.bottom-1,
.bottom-2,
.bottom-3 {
  height: 100%;
}

.bottom-2 {
  box-sizing: border-box;
  border-top: 1px solid rgb(36, 128, 0);
}

.btns {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-around;
  z-index: 100;
}

.btns view {
  width: 300rpx;
  height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 34rpx;
  color: #333;
  background: #fff;
  line-height: 88rpx;
}

.btns view:active {
  opacity: 0.7;
}

.btns view:last-child {
  background: rgb(36, 128, 0);
  color: #fff;
}